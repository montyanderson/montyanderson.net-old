<!--Git Projects-->

<div id="git-projects">
	<div class="progress">
    	<div class="indeterminate"></div>
  	</div>
</div>


<div class="row">
	<a class="cyan darken-2 waves-effect waves-purple btn animated fadeInUpBig" id="git" href="/git"><i class="fa fa-git"></i> View all projects!</a>
</div>

<script>
	$("#git").hide();

	getGithubRepos("#git-projects", 3, function() {
		$("#git").show();
	});
</script>

