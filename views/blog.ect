<% extend "inc/layout" %>

<link href='https://fonts.googleapis.com/css?family=Droid+Sans:400,700' rel='stylesheet' type='text/css'>

<div class="row">

<% for post in @posts : %>
	<div class="col s12 post">
		<h3><%- post.title %></h3>
		<span class="flow-text">
			<%- post.content %> <br />
			<strong><%- post.date %></strong>
		</span>
    </div>

    
<% end %>
<div>

</div>