{{#if admin}}

{{#if project}}
<h3>Edit Project</h3>
{{else}}
<h3>New Project</h3>
{{/if}}

<form method="post">
    {{#if project._id}}
    <input type="hidden" name="edit-project" value="{{project._id}}">
    {{else}}
    <input type="hidden" name="new-project" value="true">
    {{/if}}

    <div class="form-group">
        <input name="title" class="form-control" placeholder="Title" value="{{project.title}}">
    </div>

    <div class="form-group">
        <textarea name="body" class="form-control" placeholder="Body" rows="12">{{project.body}}</textarea>
    </div>

    <div class="form-group">
        <input type="submit" class="form-control btn btn-primary">
    </div>
</form>

{{#if projects}}
<h3>Manage Projects</h3>

<table class="table">
    {{#projects}}
    <tr>
        <td>{{_id}}</td>
        <td>{{title}}</td>
        <td>{{date}}</td>
        <td>
            <form method="post">
                <input type="hidden" name="edit-project" value="{{_id}}">
                <input type="submit" value="Edit">
            </form>
        </td>
        <td>
            <form method="post">
                <input type="hidden" name="delete" value="{{_id}}">
                <input type="submit" value="Delete">
            </form>
        </td>
    </tr>
    {{/projects}}
</table>
{{/if}}

{{else}}
<strong>Not authenticated. Please <a href="/login">login</a>.</strong>
{{/if}}
